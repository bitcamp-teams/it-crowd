  <insert id="add" parameterType="StudyDto" useGeneratedKeys="true" keyColumn="study_no" keyProperty="studyNo">
    INSERT INTO
      study(member_no, title, method, location, intake, recruitment_deadline, introduction, start_date, end_date)
    VALUES(#{memberNo}, #{title}, #{method}, #{location}, #{intake}, #{recruitmentDeadline}, #{introduction}, #{startDate}, #{endDate});
  </insert>

  <update id="update" parameterType="StudyDto">
    UPDATE
      study
    SET
      title=#{title},
      method=#{method},
      intake=#{intake},
      recruitment_deadline=#{recruitmentDeadline},
      introduction=#{introduction}
    WHERE
      study_no=#{studyNo};
  </update>

  <delete id="delete" parameterType="int">
    DELETE
      FROM
        study
    WHERE
      study_no = #{studyNo};
  </delete>

</mapper>