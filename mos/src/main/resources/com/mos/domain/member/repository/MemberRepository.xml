<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mos.domain.member.repository.MemberRepository">

  <resultMap id="MemberMap" type="MemberDto">
    <id column="member_no" property="no"/>
    <result column="email" property="email"/>
    <result column="username" property="userName"/>
    <result column="create_date" property="createDate"/>
    <result column="update_date" property="updateDate"/>
    <result column="stat" property="status"/>
    <result column="biography" property="biography"/>
    <result column="photo" property="photo"/>
  </resultMap>

  <resultMap id="MemberStudyMap" type="MemberStudyDto">
    <id column="member_study_stat_no" property="no"/>
    <result column="member_no" property="memberNo"/>
    <result column="stat" property="stat"/>

    <association property="studyDto" javaType="StudyDto">
      <id column="study_no" property="studyNo"/>
      <result column="title" property="title"/>
      <result column="start_date" property="startDate"/>
      <result column="end_date" property="endDate"/>
    </association>

  </resultMap>


  <select id="findByEmail" parameterType="MemberDto">
    select email from member where email=#{email};
  </select>

  <select id="findByUsername" parameterType="MemberDto">
    select username from member where username=#{userName};
  </select>

  <insert id="add" parameterType="MemberJoinDto">
    insert into member(email, username, belong, career, job_group)
    values(#{email},#{name},#{belong},#{career},#{jobGroup})
  </insert>

  <select id="existsByEmail" resultType="boolean" parameterType="String">
    SELECT
      CASE
        WHEN COUNT(*) > 0 THEN 'true' -- 이메일이 이미 존재하는 경우
        ELSE 'false' -- 이메일이 존재하지 않는 경우
      END AS email_exists
    FROM
      member
    WHERE
      email = #{email};
  </select>

  <select id="findByNo" resultMap="MemberMap" parameterType="int">
    select
      member_no,
      email,
      username,
      photo,
      biography
    from
      member
    where
      member_no=#{no}
  </select>

  <select id="findMyStudies" resultMap="MemberStudyMap" parameterType="int">
    SELECT
      S.STUDY_NO,
      S.TITLE,
      S.START_DATE,
      S.END_DATE,
      MSS.member_study_stat_no,
      MSS.stat
    FROM
      member_study_stat MSS
      INNER JOIN study S ON MSS.STUDY_NO = S.STUDY_NO
    WHERE
      MSS.member_no=#{no}
  </select>



</mapper>