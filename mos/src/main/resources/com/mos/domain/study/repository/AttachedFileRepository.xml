<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mos.domain.study.repository.AttachedFileRepository">

  <resultMap id="AttachedFileMap" type="AttachedFileDto">
    <id column="file_no" property="no"/>
    <result column="file_path" property="filePath"/>
    <result column="study_no" property="studyNo"/>
  </resultMap>

  <insert id="add" parameterType="AttachedFileDto">
    insert into attached_files (file_path,study_no)
    values (#{filePath},#{studyNo})
  </insert>

  <insert id="addAll" parameterType="list">
    insert into attached_files (file_path,study_no)
    values
    <foreach collection="list" item="item" separator=",">
      (#{item.filePath}, #{item.studyNo})
    </foreach>
  </insert>

  <delete id="delete" parameterType="int">
    delete from attached_files
    where file_no=#{value}
  </delete>

  <delete id="deleteAll" parameterType="int">
    delete from attached_files
    where study_no=#{value}
  </delete>

  <select id="findAllByStudyNo" resultMap="AttachedFileMap" parameterType="int">
    select
    file_no,
    file_path,
    study_no
    from
    attached_files
    where
    study_no=#{value}
    order by
    file_no asc
  </select>

  <select id="findByFileNo" resultMap="AttachedFileMap" parameterType="int">
    select
    file_no,
    file_path,
    study_no
    from
    attached_files
    where
    file_no=#{value}
  </select>





</mapper>