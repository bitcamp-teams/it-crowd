<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mos.domain.noti.repository.NotiRepository">
  
  <resultMap id="NotiMap" type="NotiDto">
    <id column="noti_no" property="no"/>
    <result column="member_no" property="recipientId"/>
    <result column="message" property="message"/>
    <result column="created_date" property="createDate"/>
    <result column="link" property="link"/>
    <result column="read_or_not" property="read"/>
  </resultMap>

  <insert id="add" parameterType="NotiAddDto">
    INSERT INTO notification(member_no, message, link)
    SELECT member_no, #{message}, #{link}
    FROM member
    WHERE member_no = #{recipientId};
  </insert>

  <select id="findById" resultMap="NotiMap">
    SELECT member_no, message, link
    FROM notification n
    where n.member_no = #{recipientId} AND read_or_not = 'N'
    order by created_date
  </select>
</mapper>